
<div class="hero-unit">
  <h1>Gym-Tracker</h1>
  <p>An easy way to follow your diet!   <span class="label label-success">BETA!</span>
</p>


<div style="margin:20px">
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="inputs">
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>
  <br style="clear:both" />
  <div class="actions">
    <%= f.button :submit, "Sign in", class: 'btn btn-primary btn-large' %>
  </div>
<% end %>

<%= render "links" %>
</div>

</div>

