<%- model_class = @profile.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @profile.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:age) %>:</strong><br>
  <%= @profile.age %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:gender) %>:</strong><br>
  <%= @profile.gender %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:weight) %>:</strong><br>
  <%= @profile.weight %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:height) %>:</strong><br>
  <%= @profile.height %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              profiles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_profile_path(@profile), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              profile_path(@profile),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
