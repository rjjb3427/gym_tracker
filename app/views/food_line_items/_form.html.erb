<%= simple_form_for([@profile,@diet,@food_line_item]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :food ,:prompt => "Selecciona un alimento" %>
    <%= f.input :ammount %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary', id: 'save_line_item', value: 'save'%>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), "#", :class => 'btn',id: 'reset_form'%>
  </div>
<% end %>
