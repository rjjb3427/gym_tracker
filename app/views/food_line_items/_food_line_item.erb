<tr id='line_item_<%= food_line_item.id %>' >
        <input class='measure_unit_id' type="hidden" value='<%= food_line_item.measure_unit.id %>' />
        <input class='food_id' type="hidden" value='<%= food_line_item.food.id %>' />
        <td class='line_item_name'><%= food_line_item.food.name %></td>
        <td class='line_item_ammount'><%= food_line_item.ammount %></td>
        <td class='line_item_measure_unit'><%= food_line_item.measure_unit.name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      profile_diet_food_line_item_path(@profile,@diet, food_line_item),
                      method: 'put',
                      style: 'enabled: false',
                      :class => ['btn btn-mini' , 'update_line_item']  %>

          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      profile_diet_food_line_item_path(@profile,@diet, food_line_item),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
</tr>