<%- model_class = Food.new.class -%>
<h1>Alimentos</h1>

<div class="alert alert-info">
  <a class="close" data-dismiss="alert">×</a>
  Acá podés crear alimentos, los vas a necesitar para la dieta.
</div>

<table class="table table-striped">
  <thead>
    <tr>
     
      <th>Categoria</th>
      <th>Descripción</th>
      <th>Información nutricional</th>

      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.type.name %></td>
        <td><%= food.name %></td>
        
        <td>
          <%= link_to t('.edit', :default => 'ver'),
                      food_nutritional_information_path(food,food.nutritionalInformation),
                      :class => 'btn btn-mini' %>
        </td>

        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_food_path(food), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      food_path(food),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_food_path,
            :class => 'btn btn-primary' %>
